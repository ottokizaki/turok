-- SIDE BUTTON
local collapsed = false
collapse.MouseButton1Click:Connect(function()
    collapsed = not collapsed
    if collapsed then
        TweenService:Create(main, TweenInfo.new(0.3), {Size = UDim2.new(0,200,0,400)}):Play()
        collapse.Text = ">"
    else
        TweenService:Create(main, TweenInfo.new(0.3), {Size = UDim2.new(0,700,0,400)}):Play()
        collapse.Text = "<"
    end
end)

-- SLIDE ANIMATION
